{
    "name": "amenadiel/jpgraph",
    "type": "library",
    "description": "Composer Friendly, full refactor of JpGraph, library to make graphs and charts",
    "keywords": [
        "graph",
        "chart",
        "pie",
        "jpgraph",
        "data"
    ],
    "homepage": "https://github.com/HuasoFoundries/jpgraph",
    "license": "QPL-1.0",
    "require": {
        "php": ">=7.4.0|| >= 8.0.0|| >= 8.1.0",
        "ext-gd": "*"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.13",
        "ergebnis/php-cs-fixer-config": "^2.13",
        "kint-php/kint": "^3.3",
        "maglnet/composer-require-checker": "^3.2",
        "overtrue/phplint": "^2.3",
        "pestphp/pest": "^1.0",
        "phpstan/phpstan": "^0.12.84",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/dotenv": "^4.0 || ^5.0",
        "symfony/event-dispatcher": "^4.0 || ^5.0",
        "symfony/yaml": "^4.0 || ^5.0",
        "vimeo/psalm": "^4.7",
        "rector/rector": "^0.10.11"
    },
    "extra": {
        "composer-normalize": {
            "indent-size": 4,
            "indent-style": "space"
        },
        "version": "4.2.0"
    },
    "autoload": {
        "psr-4": {
            "Amenadiel\\JpGraph\\": "src/",
            
            "Amenadiel\\JpGraph\\Image\\": "src/image",
            "Amenadiel\\JpGraph\\Plot\\": "src/plot",
            "Amenadiel\\JpGraph\\Text\\": "src/text",
            "Amenadiel\\JpGraph\\Themes\\": "src/themes",
            "Amenadiel\\JpGraph\\Util\\": "src/util"
        },
        "files": [
            "src/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        },"files": [
            "tests/polyfills.php"
        ]
    },
    "scripts": {
        "act": "act -P ubuntu-latest=shivammathur/node:latest",
        "coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage --coverage-clover tests/_output/coverage.xml",
        "fix": "vendor/bin/phpcbf  --standard=.phpcs.xml src/* tests/* && vendor/bin/php-cs-fixer fix --config=.php_cs.php",
        "lint": "vendor/bin/phplint",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit=2G   --configuration phpstan.neon ",
        "psalm": "vendor/bin/psalm --config=psalm.xml --long-progress --threads=4 --show-info=false  ",
        "psalter": "vendor/bin/psalm    --config=psalm.xml  --alter  --allow-backwards-incompatible-changes=false  --safe-types --issues=all  --dry-run",
        "psalm_baseline":"vendor/bin/psalm --config=psalm.xml --update-baseline --ignore-baseline  --set-baseline=psalm-baseline.xml",
        "start": "php -S localhost:8000 -t Examples",
        "test": "vendor/bin/pest"
    },
    "support": {
        "issues": "https://github.com/huasofoundries/jpgraph/issues"
    }
}
